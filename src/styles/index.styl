    --moebius-secondary-saturation: 100%;
    --moebius-secondary-lightness: 50%;
    --moebius-divergent-hue: 50;
    --moebius-divergent-saturation: 100%;
    --moebius-divergent-lightness: 50%;
    --ph-hue-map-primary-gradient-color: hsl(var(--moebius-primary-hue), var(--moebius-primary-saturation), var(--moebius-primary-lightness));
    --ph-hue-map-secondary-gradient-color: hsl(var(--moebius-secondary-hue), var(--moebius-secondary-saturation), var(--moebius-secondary-lightness));
