    --moebius-spacing-smallest: 0.25rem;
    --moebius-spacing-smaller: 0.5rem;
    --moebius-spacing-small: 1rem;
    --moebius-spacing-default: 1.5rem;
    --moebius-spacing-large: 2rem;
    --moebius-spacing-larger: 2.5rem;
    --moebius-spacing-largest: 4rem;
    --moebius-spacing-xxl: 6rem;
    --moebius-radius-smaller: 0.375rem;
    --moebius-radius-small: 0.5rem;
    --moebius-radius-large: 0.875rem;
    --moebius-radius-larger: 1.5rem;
