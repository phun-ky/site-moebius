    --ph-color-well-background-transparent: rgba(159, 168, 173,0.1);
    --ph-color-code-block-background: var(--ph-color-background);
    --moebius-box-spacing: var(--moebius-spacing-small);
    --moebius-inner-spacing: var(--moebius-spacing-small);
  }

  :root.theme--light{
    --ph-color-well-background: #EEEEEE;
    --ph-input-background-color: var(--ph-color-well-background);
    --ph-input-border-color: rgba(51, 54, 56, 0.1);
