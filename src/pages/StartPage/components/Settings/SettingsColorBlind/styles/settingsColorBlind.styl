form.ph.color-blind-simulator
  grid-area color-blind-simulator
  width: 100%
  border-radius: 12px
  grid-gap var(--moebius-inner-spacing)

  & legend.ph
    width max-content
    margin 0

  & .ph.color-blind
    display: flex;
    flex-direction column
    grid-gap: var(--moebius-inner-spacing);
    width: 100%;


    & .ph.color-blind-inner
      display: flex
      flex-direction column
      grid-gap: var(--moebius-box-spacing)
      border: none

      @media screen and (min-width: 768px)
        flex-direction: row
        flex-wrap: nowrap
        justify-content: flex-start
        margin-bottom: 0

      @media screen and (min-width: 1024px)
        flex-wrap: wrap


    & .ph.input-group
      grid-gap: 0.5rem
      align-items: center
      justify-content: center
      margin-bottom: 0

      @media screen and (min-width: 2048px)
        flex-shrink: 0
        flex-grow: 0
        align-items: flex-start
