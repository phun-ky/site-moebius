input[type='checkbox'].ph
  appearance: none
  background-color: transparent
  margin: 0
  font: inherit
  color: var(--ph-color-text-accent)
  width: 2rem
  height: 2rem
  border: 0.125rem solid var(--ph-color-text-accent)
  cursor: pointer
  display: grid
  border-radius: 0.375rem
  place-content: center

input[type='checkbox'].ph
  &::after
    content ''
    height 3rem
    width 3rem
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)

input[type='checkbox'].ph
  &::before
    content: ''
    width: 1rem
    border-radius: 0.1875rem
    height: 1rem
    transform: scale(0)
    transition: 120ms transform ease-in-out
    box-shadow: inset 0.85rem 0.85rem var(--ph-color-link)
    /* Windows High Contrast Mode */
    /* background-color: var(--ph-color-background) */
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1)

input[type='checkbox'].ph
  &:checked::before
    transform: scale(1)
