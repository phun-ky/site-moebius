input[type='radio'].ph
  appearance: none
  background-color: transparent
  margin: 0
  font: inherit
  color: var(--ph-color-text-accent)
  width: 2rem
  height: 2rem
  border: 0.125rem solid var(--ph-color-text-accent)
  border-radius: 50%
  cursor: pointer
  display: grid
  place-content: center
  padding: 0
  position relative


input[type='radio'].ph
  &::after
    content ''
    height 3rem
    width 3rem
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)

input[type='radio'].ph
  &::before
    content: ''
    width: 1rem
    height: 1rem
    border-radius: 50%
    box-shadow: inset 0 0 var(--ph-color-link)
    /* Windows High Contrast Mode */
    /* background-color: var(--ph-color-background) */
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1)


input[type='radio'].ph
  &:checked::before
    box-shadow: inset 0.8rem 0.8rem var(--ph-color-link)


input[type='radio'].ph + label.ph
  margin 0
