input[type="range"].ph
  position: relative
  z-index: 1
  appearance: none
  background-color: transparent
  border-radius: 1.5rem
  height: 1.5rem
  width: 100%
  display: block
  border: none
  outline: none

  &:focus
    outline: none

  &:active, &:hover:active
    cursor: grabbing

  &::-moz-range-track
    appearance: none
    opacity: 0
    outline: none !important

  &::-ms-track
    outline: none !important
    appearance: none
    opacity: 0

  &::-webkit-slider-thumb
    height: 1.5rem
    width: 1.5rem
    border-radius: 50%
    appearance: none
    background-color: var(--ph-color-background)
    border: 0.5rem solid var(--ph-color-background)
    outline: 0.25rem solid var(--ph-color-text-accent)
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1)
    box-shadow: inset 0 0 var(--ph-color-link)

    &:active, &:hover:active
      box-shadow: inset 2rem 2rem var(--ph-color-link)

    &:hover
      box-shadow: inset 2rem 2rem var(--ph-color-link)

  &::-moz-range-thumb
    height: 1.5rem
    width: 1.5rem
    border-radius: 50%
    appearance: none
    background-color: var(--ph-color-background)
    border: 0.5rem solid var(--ph-color-background)
    outline: 0.25rem solid var(--ph-color-text-accent)
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1)
    box-shadow: inset 0 0 var(--ph-color-link)

    &:active, &:hover:active
      box-shadow: inset 2rem 2rem var(--ph-color-link)

    &:hover
      box-shadow: inset 2rem 2rem var(--ph-color-link)
